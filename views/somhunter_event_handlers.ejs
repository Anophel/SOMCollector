  function rescore(callback) {

    // Get current queries
    const q0 = document.getElementById("textQueryInput0").value;
    const q1 = document.getElementById("textQueryInput1").value;

    // Request input data
    const reqData = {
      q0: q0,
      q1: q1,
    };

    // Make the request
    fetch("rescore", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(reqData),
    })
      .then((res) => {
        if (!res.ok) { throw Error(res.statusText); }
        return res.json()
      })
      .then((data) => {
        // Handle error
        if (data.error) {
          throw Error(data.error.message);
        }

        // Now request new display
        //showTopDisplay();

        //showGlobalMessage(`Rescored.`, "", 2000,"s"); 
        callback();
      })
      .catch((e) => {
        console.log("Error: " + JSON.stringify(e.message));
        showGlobalMessage(
          "Request failed!",
          JSON.stringify(e.message),
          5000,
          "e"
        );
      });
  }

  function like(el, frameId) {
    if (ignoreNextLike) {
      ignoreNextLike = false;
      return;
    }

    // Request input data
    const reqData = {
      frameId: frameId,
    };

    let url = "/like_frame";
    // If unlike
    if (el.classList.contains("liked")) {
      url = "/unlike_frame";
    }

    // Make the request
    fetch(url, {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(reqData),
    })
      .then((res) => {
        if (!res.ok) { throw Error(res.statusText); }
        return res.json()
      })
      .then((data) => {
        // Handle error
        if (data.error) {
          throw Error(data.error.message);
        }

        if (data.isLiked) {
          el.classList.add("liked");
        } else {
          el.classList.remove("liked");
        }

      })
      .catch((e) => {
        console.log("Error: " + JSON.stringify(e.message));
        showGlobalMessage(
          "Request failed!",
          JSON.stringify(e.message),
          5000,
          "e"
        );
      });
  }

  const hideSubmitWindow = 3000;
  var subWindowTick = 0;
  //function showSubmitWindow(messagePrimary, messageSecondary, time, type = "i") {
  function showSubmitWindow(image, shot, video) {
    subWindowTick++;
    $cont = $("#submitCont");

    $primary = $($cont.children(".primary")[0]);

    var ihtml = "Correct video: " + (video ? "✓" : "✗") +
      "<br/>Correct shot: " + (shot ? "✓" : "✗") +
      "<br/>Correct image: " + (image ? "✓" : "✗");

    if (image) {
      ihtml += '<br/><div class="small-6 cell"><a class="button block-btn new-seach-btn" onclick="closeSubmitWindow();resetSearchSession()">New search</a></div>'
    } else {
      ihtml += '<div id="submit-progress">  <div id="submit-bar"></div> </div>'
    }

    $primary.html(ihtml);
    $cont.css('display', 'block');

    // Progress bar
    $bar = $("#submit-bar");
    $bar.removeClass();
    $bar.addClass("submit-bar-complete");

    if (!image) {
      setTimeout(closeSubmitWindow, hideSubmitWindow, subWindowTick);
    }
  }

  function closeSubmitWindow(tick) {
    if (tick == undefined || subWindowTick == tick) {
      console.log("Closing submit window");
      $cont = $("#submitCont");
      $primary = $($cont.children(".primary")[0]);
      $primary.html("");
      $cont.css('display', 'none');
    }
  }

  function submitImage(frameId) {
    if (startWorking()) {
      // Request input data
      const reqData = {
        frameId: frameId,
      };

      // Make the request
      fetch("/submit_frame", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(reqData),
      })
        .then((res) => {
          if (!res.ok) { throw Error(res.statusText); }
          return res.json()
        })
        .then((data) => {
          // Handle error
          if (data.error) {
            throw Error(data.error.message);
          }

          endWorking();
          showSubmitWindow(data.correct[0], data.correct[1], data.correct[2]);
        })
        .catch((e) => {
          console.log("Error: " + JSON.stringify(e.message));
          showGlobalMessage(
            "Request failed!",
            JSON.stringify(e.message),
            5000,
            "e"
          );
        });
    }
  }

